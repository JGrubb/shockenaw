<div class="row">
  <h3>Sign in</h3>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "custom") do |f| %>
    <fieldset>
      <div class="push-2 large-4 columns"><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

      <div class="pull-2 large-4 columns"><%= f.label :password %><br />
        <%= f.password_field :password %></div>

    </fieldset>

    <%= f.submit "Sign in", class: "button small" %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> remember me
    <% end -%>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
