<div>
  <a class="close-reveal-modal">&#215;</a>
</div>
<div>
  <%= simple_form_for @show do |f| %>
    <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :venue %>
    <%= f.input :location %>
    <%= f.input :info, input_html: { rows: 6 } %>
    <%= f.input :link %>
    <%= f.button :submit, class: "button small" %>
  <% end %>
</div>
